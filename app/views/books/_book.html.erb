<div id="<%= dom_id book %>">
    <h1><%= book.title %></h1>
    <p>
        <strong>Title:</strong>
        <%= book.title %>
    </p>

    <p>
        <strong>Author:</strong>
        <%= book.author %>
    </p>

    <p>
        <strong>ISBN:</strong>
        <%= book.isbn %>
    </p>

    <p>
        <strong>Publisher:</strong>
        <%= book.publisher %>
    </p>

    <p>
        <strong>published_date:</strong>
        <%= book.published_date %>
    </p>

    <p>
        <strong>Category:</strong>
        <%= book.category %>
    </p>

    <p>
        <strong>Description:</strong>
        <%= book.description %>
    </p>

    <p>
        <strong>Copy:</strong>
        <%= book.copy %>
    </p>

    <p>
        <strong>Status:</strong>
        <%= book.status %>
    </p>

</div>