<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<%= link_to "New book", new_book_path,class: "btn btn-primary" %>
<br>
<br>
<br>
<table class="table table-striped table-hover table-bordered border-success">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Publisher</th>
            <th>Published Date</th>
            <th>Category</th>
            <th>Description</th>
            <th>Copy</th>
            <th>Status</th>
            <th>OPTIONS</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.isbn %></td>
            <td><%= book.publisher %></td>
            <td><%= book.published_date %></td>
            <td><%= book.category %></td>
            <td><%= book.description %></td>
            <td><%= book.copy %></td>
            <td><%= book.status %></td>
            <td>
            <%= link_to "Show", book, class: "btn btn-primary" %>
            &nbsp;
            <%= link_to "Edit", edit_book_path(book), class: "btn btn-primary" %>
            </td>
        </tr>
        <% end %>
    </tbody>
    </table>

